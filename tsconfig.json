{
    "compilerOptions": {
      "baseUrl": ".",  // This sets the base directory for module resolution
      "paths": {
        "@/*": ["./db/*", ]  // The @ alias points to the src/ directory
      },
      "rootDir": "db",   // Make sure rootDir is set to the src folder
      "outDir": "dist",   // Output directory for compiled code
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["db/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }
  